<main class=su_main>
  <section class="su_container">
    <div class="sign_up_card">
      <h2 class="su_title">LOBOLA cafe</h2>

      <%= form_with model: @user, url: user_registration_path, method: :post, class:"su_form", local: true do |f| %>
        <%= f.text_field :nickname, placeholder: 'ニックネーム', size: "50" %>
        <%= f.email_field :email, placeholder: 'メールアドレス', size: "50" %>
        <%= f.password_field :password, placeholder: 'パスワード', size: "50" %>
        <%= f.password_field :password_confirmation, placeholder: 'パスワード確認', size: "50" %>
        <div class="su_buttons">
          <%= link_to '◀︎ TOP', root_path, class: "su_back_btn", data: {turbolinks: false} %>
          <%= f.submit 'SEND', class: "su_submit" %>
        </div>
      <% end%>

    </div>
  </section>
</main>

